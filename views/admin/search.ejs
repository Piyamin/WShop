<%- include('../includes/head.ejs') %> 
<%- include('../includes/navigation.ejs')%>
<main>
  <div class="container mt-3">
    <h2>Products</h2>
    <p>
      Type something in the input field to search the table for product name:
    </p>
    <div class="row">
      <div class="col-md-10">
          <input
          class="form-control"
          id="myInput"
          type="text"
          placeholder="Search.."
        />
      </div>
      <div class="col-md-2">
        <a
        href="/insert"
        class="genric-btn info-border"
        ><i class="fas fa-plus"></i>
      </a>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        
        
        <br />
        <table class="table table-bordered text-center">
          <thead>
            <tr>
              <th>No.</th>
              <th>Product Name</th>
              <th>Price</th>
              <th>Tools</th>
            </tr>
          </thead>
          <tbody id="myTable">
            <% if (prods.length > 0) { %> <% prods.map((product, index) => { %>
            <tr>
              <td><%- (index+1) %></td>
              <td><%- product.product_name%></td>
              <td><%- product.price%></td>
              <td>
                <a
                  href="<%- '/update/'+product._id%>"
                  class="genric-btn info circle"
                  ><i class="fas fa-pencil-alt"></i
                ></a>
                <a
                  href="<%- '/delete/'+product._id%>"
                  onclick="return confirm('Are you sure you want to delete this item?');"
                  class="genric-btn danger circle"
                  ><i class="fas fa-trash-alt"></i
                ></a>
              </td>
            </tr>
            <% }) %> <% } else { %>
            <tr>
              <td colspan="4">
                <h1>No Products Found!</h1>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
<%- include('../includes/end.ejs') %>
