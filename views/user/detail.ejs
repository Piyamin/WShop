<%- include('../includes/head.ejs') %>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <!--================Single Product Area =================-->
        <div class="container">
            <div class="row justify-content-center">
                <% if (errorMessage) { %>
                    <div class="alert alert-warning" role="alert">
                        <%= errorMessage[0].param + ': '+ errorMessage[0].msg %>
                    </div>
                    <% } %>
                    <div class="row">
                        <form action="/cart" method="post"></form>
                            <div class="col-md-6">
                                <img src="<%- product_image %>" alt="">
                            </div>
                            <div class="col-md-6">
                                <div class="single_product_text text-center">
                                    <h3><%- product_name %></h3>
                                    <p>
                                        <%- product_detail %>
                                    </p>
                                    <h4><%- price %>à¸¿</h4>
                                    <div class="card_area">  
                                            <div class="product_count d-inline-block card_area">
                                                <span class="product_count_item inumber-decrement"> <i class="ti-minus"></i></span>
                                                <input class="product_count_item input-number" type="text" value="<%- amout %>" min="0" max="10">
                                                <span class="product_count_item number-increment"> <i class="ti-plus"></i></span>
                                            </div>                      
                                    </div>
                                    <br>
                                    <div class="add_to_cart">
                                        <button type="submit" class="btn_3">add to cart</button>
                                    </div>
                                
                                </div>
                            </div>
                        </form>
                    </div>
            </div>
        </div>
        <!--================End Single Product Area =================-->
    </main>
<%- include('../includes/end.ejs') %>